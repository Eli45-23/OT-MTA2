{
  "name": "overtime-tracker",
  "version": "1.0.0",
  "description": "Track overtime hours and assign next eligible employee",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/src/server.js",
    "start:prod": "node dist/src/server.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:psql": "docker exec -it ot_mta2_db psql -U postgres -d ot_mta2",
    "db:psql:test": "docker exec -it ot_mta2_db psql -U postgres -d ot_mta2_test",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit push:pg",
    "db:seed": "tsx scripts/seed.ts",
    "test:unit": "jest tests/unit --testTimeout=5000",
    "test:integration": "cross-env DATABASE_URL=$TEST_DATABASE_URL jest tests/integration --testTimeout=30000",
    "test:e2e": "cross-env DATABASE_URL=$TEST_DATABASE_URL jest tests/e2e --testTimeout=60000",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "verify": "npm run typecheck && npm run lint && npm run test:all",
    "web:dev": "cd apps/web && npm run dev",
    "web:build": "cd apps/web && npm run build",
    "web:start": "cd apps/web && npm run start"
  },
  "keywords": [
    "overtime",
    "scheduling",
    "employee",
    "tracking"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "express": "^4.18.2",
    "postgres": "^3.4.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.20.4",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  }
}
